[Unit]
Description=Change the GTK theme to dark mode.
After=graphical.target

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'xfconf-query -c xfwm4 -p /general/theme -s "WhiteSur-dark" && xfconf-query -c xsettings -p /Net/ThemeName -s "WhiteSur-dark" && xfconf-query -c xsettings -p /Net/IconThemeName -s "WhiteSur-dark"'

[Install]
WantedBy=default.target
